/* 轮播图样式 */
.carousel {
  width: 100%;
  height: 150px;
  /* border: 1px solid black; */
}

.carousel image {
  width: 100%;
  height: 420px;
  /* border: 1px solid red; */
  display: grid;
  place-items: center;
}

/* 导航栏样式 */
.conter {
  width: 100%;
  height: 115px;
  /* border: 1px solid red; */
  border-bottom: 3px solid #d0d0d0;
}

.conter .conter-classify {
  width: 31.2%;
  float: left;
  /* border: 1px solid red; */
  border-style: outset;
}

.conter image {
  /* float: left; */
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.conter view {
  text-align: center;
  font-size: 120%;
}

/* 热门社区样式 */
.content .title {
  height: 40px;
  text-align: center;
}

.content text {
  font-size: 25px;
  margin-top: 15rpx;
  /* font-weight: bolder; */
  color: rgb(0, 0, 0);
  /* border: 1px solid red; */
}

.box-all {
  width: 100%;
  /* height: 72px; */
  /* border: 1px solid black; */
  display: flex;
  box-shadow: 0px 0px 3px 4px #ccc;
}

.box-all .community-avatar {
  width: 72px;
  height: 72px;
  margin-left: 5px;
  /* border: 1px solid red; */
}

.box-all .community-avatar image {
  width: 71px;
  height: 70px;
}

.box-all .community-title {
  width: 300px;
  /* height: 62px; */
  margin-top: 8px;
  margin-left: 5px;
  /* border: 1px solid red; */
}

.box-all .community-title text {
  font-weight: bold;
}

.null {
  width: 100%;
  height: 10px;
}

/* 热门帖子 */
.user-post {
  /* height: 80px; */
  margin-top: 10px;
  /* border: 1px solid red; */
  display: flex;
  justify-content: center;
  box-shadow: 0px 0px 3px 4px #ccc;
}

.user-post .one-post {
    margin: 10px auto;
  width: 90%;
  /* border: 1px solid red; */
}

.user-post .one-post .post-title {
  font-size: 20px;
  font-weight: bold;
}